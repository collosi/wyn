-- Test f32 namespace functions

#[vertex]
def test_vertex : #[builtin(position)] vec4 =
  let angle = 1.0f32 in
  let s = f32.sin angle in
  let c = f32.cos angle in
  vec4 s c 0.0f32 1.0f32

#[fragment]
def test_fragment : #[location(0)] vec4 =
  let a = 0.5f32 in
  let b = 0.8f32 in
  let m = f32.max a b in
  let result = f32.sqrt m in
  vec4 result result result 1.0f32
