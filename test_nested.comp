#version 450

layout(local_size_x = 1) in;

layout(set = 0, binding = 0) buffer Output {
    int result;
} output_buffer;

void main() {
    int x = int(gl_GlobalInvocationID.x);
    int result;
    
    if (x == 0) {
        result = 10;
    } else if (x == 1) {
        result = 20;
    } else {
        result = 30;
    }
    
    output_buffer.result = result;
}